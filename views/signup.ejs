<%- include('header.ejs') %>

<h6 class="py-4 px-20">Signup as a New User</h6>
<form class="px-40 py-4" action="/users" method="post">
    <%- include('flash') %>
    <div class="py-3">
        <label for="role" class="block mb-2 text-gray-700 font-semibold">Role</label>
        <div class="flex space-x-6">
            <div class="flex items-center">
                <input type="radio" id="student" name="role" value="Student" class="border border-gray-300 text-gray-900 rounded p-2">
                <label for="student" class="ml-2 text-gray-700">Student</label>
            </div>
            <div class="flex items-center">
                <input type="radio" id="educator" name="role" value="Educator" class="border border-gray-300 text-gray-900 rounded p-2">
                <label for="educator" class="ml-2 text-gray-700">Educator</label>
            </div>
        </div>
    </div>
    <div class="py-3">
        <label for="fullName">Full Name</label>
    <input type="text" name="fullName" required class="border border-gray-300 text-gray-900 rounded p-2 w-full">
    </div>
    
    <div class="py-3">
        <label for="email">Email</label>
        <input type="email" name="email" required class="border border-gray-300 text-gray-900 rounded p-2 w-full">
    </div>
    <div class="py-3">
        <label for="password">Password</label>
        <input type="password" name="password" required class="border border-gray-300 text-gray-900 rounded p-2 w-full">
    </div>
    <div class="py-3"><button type="submit" class="text-white bg-green-600 hover:bg-green-700 font-medium rounded px-5 py-2">Sign up</button></div>
</form>


<div class="px-20 py-60">
    <%- include('footer.ejs') %>
</div>